{
	// Place your snippets for markdown here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }

"Insert task": {
	"prefix": "task",
	"body": [
	"--- task ---",

	"$1",

	"--- /task ---"
	],
	"description": "insert projects site task"
	},

"Insert collapse": {
	"prefix": "col",
	"body": [
	"--- collapse ---\n\n---",

	"title: $1",

	"---\n\n$2\n\n--- /collapse ---"
	],
	"description": "insert projects site collapse"
	},

"Insert url": {
	"prefix": "url",
	"body": [
		"[${1:desc}](${2:path})"
	],
	"description": "insert projects site url"
},

"Looks block": {
	"prefix": "looks",
	"body": [
		"`$1`{:class=\"block3looks\"}"
	],
	"description": "Looks block"
},

"Motion block": {
	"prefix": "motion",
	"body": [
		"`$1`{:class=\"block3motion\"}"
	],
	"description": "Motion block"
},

"Events block": {
	"prefix": "events",
	"body": [
		"`$1`{:class=\"block3events\"}"
	],
	"description": "Events block"
},

"Control block": {
	"prefix": "control",
	"body": [
		"`$1`{:class=\"block3control\"}"
	],
	"description": "Control block"
},

"Sensing block": {
	"prefix": "sensing",
	"body": [
		"`$1`{:class=\"block3sensing\"}"
	],
	"description": "Sensing block"
},

"Sounds block": {
	"prefix": "sound",
	"body": [
		"`$1`{:class=\"block3sound\"}"
	],
	"description": "Sounds block"
},

"Operators block": {
	"prefix": "op",
	"body": [
		"`$1`{:class=\"block3operators\"}"
	],
	"description": "Sounds block"
},

"Variables block": {
	"prefix": "var",
	"body": [
		"`$1`{:class=\"block3variables\"}"
	],
	"description": "Variables block"
},

"My blocks block": {
	"prefix": "custom",
	"body": [
		"`$1`{:class=\"block3custom\"}"
	],
	"description": "My blocks block"
},

"Insert image": {
	"prefix": "image",
	"body": [
		"![${1:desc}](images/${2:path})"
	],
	"description": "insert projects site image"
},

"Embed": {
	"prefix": "embed",
	"body": [
		"** $1 **: [See inside](https://scratch.mit.edu/projects/$2/editor){:target=\"_blank\"}",

		"<div class=\"scratch-preview\">\n<iframe allowtransparency=\"true\" width=\"485\" height=\"402\" src=\"https://scratch.mit.edu/projects/embed/$2/?autostart=false\" frameborder=\"0\"></iframe>\n</div>"
	],
	"description": "embed Scratch project with See Inside"
},

"Insert python code": {
	"prefix": "python",
	"body": [
		"--- code ---",
		"---",
		"language: python",
		"filename: main.py",
		"line_numbers: true",
		"line_number_start: $1",
		"line_highlights: $2",
		"---",
		"$3",
		"--- /code ---",
		],
	"description": "insert python code"
},

"Insert quiz question": {
	"prefix": "quiz",
	"body": [
		"--- question ---",
		"",
		"---",
		"legend: Question $1 of 3",
		"---",
		"",
		"$2",
		"",
		"--- choices ---",
		"",
		"- ( ) $3.",
		"",
		" --- feedback ---",
		"",
		" $4.",
		"",
		" --- /feedback ---",
		"",
		"- ( ) $4.",
		"",
		" --- feedback ---",
		"",
		" $6.",
		"",
		" --- /feedback ---",
		"",
		"- (x) $7.",
		"",
		" --- feedback ---",
		"",
		" $8.",
		"",
		" --- /feedback ---",
		"",
		"- ( ) $9.",
		"",
		" --- feedback ---",
		"",
		" $10.",
		"",
		" --- /feedback ---",
		"",
		"--- /choices ---",
		"",
		"--- /question ---",
		],
	"description": "insert template quiz page"
}

}
